{
  "name": "jellyflyzerd",
  "version": "2.1.0",
  "description": "Modern Jellyfin manager with TypeScript and Docker support",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "bin": {
    "jellyflyzerd": "./dist/index.js"
  },
  "keywords": [
    "jellyfin",
    "media-server",
    "docker",
    "cli",
    "typescript",
    "wsl"
  ],
  "author": "danny-gca",
  "license": "MIT",
  "dependencies": {
    "@jellyfin/sdk": "^0.8.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dockerode": "^4.0.8",
    "dotenv": "^16.3.1",
    "inquirer": "^10.0.0",
    "ora": "^8.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/dockerode": "^3.3.43",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
