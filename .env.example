# Configuration Jellyflyzerd v2.0.0
# Copiez ce fichier en .env et modifiez les valeurs selon votre environnement

# === JELLYFIN ===
JELLYFIN_PORT=8096
JELLYFIN_HTTPS_PORT=8920

# === RÉSEAU ===
LOCAL_IP=192.168.1.100
EXTERNAL_DOMAIN=your-domain.com
HTTP_PORT=80
HTTPS_PORT=443

# === CHEMINS DOCKER ===
# Disque de données principal (sensible - adaptez selon votre système)
DATA_DISK=/mnt/d
# Structure centralisée Jellyflyzerd
JELLYFIN_DATA_ROOT=/mnt/d/jellyflyzerd-config

# Chemins spécifiques
MEDIA_PATH=/mnt/d
CONFIG_PATH=/mnt/d/jellyflyzerd-config/config
CACHE_PATH=/mnt/d/jellyflyzerd-config/cache
LOGS_PATH=/mnt/d/jellyflyzerd-config/logs

# === ENVIRONNEMENT ===
NODE_ENV=production
TZ=Europe/Paris

# === SÉCURITÉ ===
ENABLE_FIREWALL=true
ENABLE_FAIL2BAN=true
ENABLE_HTTPS=true
AUTO_UPDATES=true

# === MISES À JOUR DOCKER (Watchtower) ===
# Activer les mises à jour automatiques des conteneurs
WATCHTOWER_MONITOR_ONLY=false
# URL de notification (optionnel) - voir https://containrrr.dev/shoutrrr/
# Exemples:
# - Discord: discord://token@id
# - Slack: slack://token@channel
# - Email: smtp://user:password@host:port/?from=sender@example.com&to=receiver@example.com
WATCHTOWER_NOTIFICATION_URL=

# === SYSTÈME ===
# Utilisateur système (détecté automatiquement si vide)
SYSTEM_USER=
# Répertoire du projet (détecté automatiquement si vide)
PROJECT_DIR=
# === DOCKER USER ===
PUID=1000
PGID=1000
